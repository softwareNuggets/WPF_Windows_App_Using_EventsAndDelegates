<Application x:Class="WpfWithDelegates.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfWithDelegates"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="FieldLabel" TargetType="Label">
            <Setter Property="BorderBrush" Value="#4e2e28" />
            <Setter Property="Background" Value="#FFD6BEBE"></Setter>
            <Setter Property="FontFamily" Value="Arial"></Setter>
            <Setter Property="FontStyle" Value="Italic"></Setter>
            <Setter Property="FontWeight" Value="Light"></Setter>
            <Setter Property="Foreground" Value="#FFBD6B6B"></Setter>
            <Setter Property="FontSize" Value="24"></Setter>
        </Style>
        <Style x:Key="FieldTextBox" TargetType="TextBox">
            <Setter Property="BorderBrush" Value="#4e2e28" />
            <Setter Property="Background" Value="#FFFFFF"></Setter>
            <Setter Property="FontFamily" Value="Arial"></Setter>
            <Setter Property="FontStyle" Value="Italic"></Setter>
            <Setter Property="FontWeight" Value="Light"></Setter>
            <Setter Property="Foreground" Value="#FFBD6B6B"></Setter>
            <Setter Property="FontSize" Value="16"></Setter>
            <Setter Property="Margin" Value="10,7,0,12"></Setter>
        </Style>
    </Application.Resources>
</Application>
